{
  "name": "start-kms",
  "version": "1.0.0",
  "description": "A lightweight Key Management System for EVM-compatible blockchains with secure key derivation, encryption, and signing operations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./encryption": {
      "types": "./dist/encryption/index.d.ts",
      "default": "./dist/encryption/index.js"
    },
    "./keys": {
      "types": "./dist/keys/index.d.ts",
      "default": "./dist/keys/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/",
    "clean": "rimraf dist"
  },
  "keywords": [
    "kms",
    "key-management",
    "ethereum",
    "evm",
    "wallet",
    "encryption",
    "hd-wallet",
    "bip39",
    "bip44",
    "aes",
    "crypto"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "aes-js": "^3.1.2",
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
